extends layout

block content 
  h1= title 

  form(method='POST' action='')
    label(for='name') Name: 
      input#name(type='text' placeholder='Name' name='name' required='true' value=(undefined===cpu ? '' : cpu.name) )
    label(for='name') Model: 
      input#model(type='text' placeholder='Model' name='model' required='true' value=(undefined===cpu ? '' : cpu.model) )
    label(for='name') Price: 
      input#number(type='number' step='0.01' name='price' required='true' value=(undefined===cpu ? '' : cpu.price) )
    label(for='name') Manufacturer: 
      input#manufacturer(type='text' placeholder='Manufacturer' name='manufacturer' required='true' value=(undefined===cpu ? '' : cpu.manufacturer) )

    button(type='submit') Submit 

  if errors
    ul
      for error in errors 
        li!= error.msg